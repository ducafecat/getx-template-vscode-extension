{
  "name": "getx-template",
  "displayName": "Flutter GetX Generator - 猫哥",
  "description": "It supports the getx library and provides effective creation of business modules for Flutter applications.",
  "version": "1.1.5",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "flutter",
    "dart",
    "getx",
    "template",
    "generator",
    "state-management"
  ],
  "repository": {
    "url": "https://github.com/ducafecat/getx-template-vscode-extension"
  },
  "publisher": "ducafecat",
  "icon": "logo.png",
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.new-getx-page",
        "title": "Getx: New Page"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.new-getx-page",
          "group": "blocGroup@1",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration":[
      {
        "title": "Flutter GetX Generator - 猫哥",
        "properties": {
          "GetxTemplate.PrefixFileName":{
            "type":"boolean",
            "default": false,
            "description": "开启文件名前缀"
          },
          "GetxTemplate.SelectPathInOpenDialog":{
            "type":"boolean",
            "default": false,
            "description": "使用vscode快捷命令新建页面是否打开对话框选择目录位置"
          },
          "GetxTemplate.PascalCaseClassName":{
            "type":"boolean",
            "default": false,
            "description": "修改类名为写开头的命名方式"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.56.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "14.x",
    "@types/lodash": "^4.14.121",
    "@types/change-case": "^2.3.1",
    "@types/js-yaml": "^3.12.1",
    "@types/mkdirp": "^0.5.2",
    "@types/semver": "^6.0.2",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "ts-loader": "^8.0.14",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "change-case": "^3.1.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.19",
    "mkdirp": "^0.5.1",
    "semver": "^6.3.0"
  }
}
